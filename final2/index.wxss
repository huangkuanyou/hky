.select {
  box-sizing: border-box;
  width: 70%;
  height:60rpx;
  border: 1px solid #e0dddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  margin-top: 12px;
 margin-left: 33px;
}

.select_text {
  font-size: 28rpx;
  flex: 1;
  color: rgb(102, 102, 102);
  line-height: 86rpx;
  height: 70rpx;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 86rpx;
  width: 70%;
  border: 1px solid #e0dddd;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  margin-top: 17.5px;
 margin-left: 33px;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding:5rpx 10rpx;
  color: rgb(102, 102, 102);
 
}


